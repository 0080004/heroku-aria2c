{
	"name": "Heroku aria2c",
	"description": "Run aria2c on heroku",
	"repository": "https://github.com/maple3142/heroku-aria2c",
	"keywords": ["aria2c"],
	"env": {
		"ARIA2C_SECRET": {
			"description": "Aria2c's secret",
			"value": "DEFAULT_SECRET"
		},
		"RCLONE_CONFIG": {
			"description": "Rclone config to mount in one line, replace line breaks with \"\\n\""
		},
		"RCLONE_MOUNT_PATH": {
			"description": "Path to mount in your Rclone drive. Must start with a forward slash."
		}
	},
	"buildpacks": [
		{
			"url": "heroku/nodejs"
		},
		{
			"url": "https://github.com/Aerovin/aria2c.git"
		},
		{
			"url": "https://github.com/amivin/rclone-heroku.git"
		}
	]
}
